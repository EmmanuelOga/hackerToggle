{
  "manifest_version" : 2,

  "name": "HackerNews Thread Toggle",
  "version": "1.0.2",
  "description": "UI improvements for reading hackernews",

  "content_scripts" : [
    {
      "js" : ["inject.js"],
      "matches" : ["https://news.ycombinator.com/item?*", "https://news.ycombinator.com/thread?*", "https://news.ycombinator.com/x?*"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],

  "permissions": [
    "https://news.ycombinator.com/"
  ],

  "web_accessible_resources" : ["main.js", "jquery-2.0.3.min.js", "jquery-2.0.3.min.map"]
}
